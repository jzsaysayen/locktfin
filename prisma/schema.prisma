generator client {
  provider = "prisma-client"
  output = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Order {
  id String @id @default(cuid())
  userId String // Stack Auth User ID
  trackId String @unique
  customerName String
  customerNumber String
  customerEmail String // email automated messaging api for this
  price Int
  status String // received, washing, drying, pickup, complete
  notes String? //Optional

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([trackId])
  @@index([customerName])
  @@index([createdAt])
}
